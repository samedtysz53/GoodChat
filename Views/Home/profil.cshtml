
@{
    ViewBag.Title = "profil";

}


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>profil</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>
<body class="container-fluid">
    <div class="col-sm-12 col-md-12 col-xl-12">





        <nav class="navbar navbar-expand-lg navbar-light alert bg-dark text-white">
            <a class="navbar-brand text-white" href="#">GoodChat</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse text-white  " id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-white" href="#">Profil <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="explore">Keşfet</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link  text-white " href="Mesajlar">Mesajlar</a>
                    </li>
                </ul>

            </div>
        </nav>

        <img class="rounded-circle bg-danger col-2 m-auto  form-row" src="~/Content/images/profile-icon-png-profiles-13.png" />

        @using (Html.BeginForm("profiles", "Home", FormMethod.Post))
        {
            <div class="mt-2 form-group"><input type="submit" class="form-control col-5 m-auto btn-secondary  text-white" value="Profili düzenle" /></div>
        }
        <div class="container">
            <div class="mt-5  col-4 font-weight-bold">@ViewBag.value</div>
            <div class="bg-success alert text-white">Hakkında <br /> <div class="mt-1  col-4 ">@ViewBag.Hak</div></div>

            <div class="mt-1 float-left  col-12 bg-danger text-white alert "><Font style="font-style:normal">Yaş:</Font>@ViewBag.yas</div>
            <br />
            <div class="mt-5  col-12   bg-success alert text-white">Cinsiyet:@ViewBag.gender</div>
            <div class="mt-5  col-4 font-weight-bold"></div>
        </div>

    </div>
</body>
</html>


